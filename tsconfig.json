{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        //"outFile": "./build",
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.d.ts",
        "**/*.baseDir.ts"
    ]
}

